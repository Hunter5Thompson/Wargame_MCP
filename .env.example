# =============================================================================
# Wargame MCP Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Usage: cp .env.example .env

# -----------------------------------------------------------------------------
# OpenAI API Configuration
# -----------------------------------------------------------------------------
# Required for embeddings and agent functionality
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Custom OpenAI API endpoint (for Azure OpenAI or proxies)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Embedding model to use (default: text-embedding-3-large)
# Options: text-embedding-3-large, text-embedding-3-small, text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-large

# -----------------------------------------------------------------------------
# ChromaDB Configuration
# -----------------------------------------------------------------------------
# Path where ChromaDB stores vector data (inside container: /data/chroma)
CHROMA_PATH=/data/chroma

# Name of the ChromaDB collection
CHROMA_COLLECTION=wargame_docs

# -----------------------------------------------------------------------------
# Mem0 Configuration
# -----------------------------------------------------------------------------
# Mem0 service base URL (when using docker-compose, use service name)
MEM0_BASE_URL=http://mem0:8080

# Optional: Mem0 API key (if using Mem0 Cloud)
# MEM0_API_KEY=your-mem0-api-key-here

# Default number of memory results to return
MEM0_DEFAULT_LIMIT=10

# Default memory scope (user, scenario, agent)
MEM0_DEFAULT_SCOPE=user

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Chunking configuration
CHUNK_SIZE_TOKENS=800
CHUNK_OVERLAP_TOKENS=200

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable structured JSON logging
JSON_LOGS=true

# -----------------------------------------------------------------------------
# Docker Compose Settings
# -----------------------------------------------------------------------------
# These are used by docker-compose for port mapping and service configuration

# ChromaDB port (default: 8000)
CHROMADB_PORT=8000

# Mem0 port (default: 8080)
MEM0_PORT=8080

# Wargame MCP application port (default: 8888)
WARGAME_MCP_PORT=8888

# Nginx reverse proxy ports (only used with --profile with-proxy)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
